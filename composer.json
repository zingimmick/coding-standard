{
    "name": "zing/coding-standard",
    "description": "The coding standard of the project.",
    "keywords": ["coding-standard", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "rector/rector": "^0.10.0",
        "slevomat/coding-standard": "^6.4 || ^7.0",
        "symplify/easy-coding-standard": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0",
        "roave/security-advisories": "dev-master"
    },
    "conflict": {
        "nikic/php-parser": "^4.10.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Zing\\CodingStandard\\Tests\\": "tests",
            "Zing\\CodingStandard\\Correct\\": "correct"
        }
    },
    "scripts": {
        "test": [
            "rm -rf fixed/*.php",
            "cp -R wrong/* fixed/",
            "vendor/bin/rector process --clear-cache",
            "vendor/bin/ecs check --fix --clear-cache",
            "vendor/bin/phpunit",
            "vendor/bin/ecs check correct --clear-cache"
        ],
        "changelog": [
            "vendor/bin/changelog-linker dump-merges --in-categories --ansi",
            "vendor/bin/changelog-linker link --ansi",
            "vendor/bin/changelog-linker cleanup --ansi"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
